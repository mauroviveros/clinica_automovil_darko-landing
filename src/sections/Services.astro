---
import { Icon } from 'astro-icon/components';
import Section from '../components/Section.astro';

const services = [
  {
    icon: 'lucide:wrench',
    title: 'Mantenimiento General',
    text: 'Cambio de aceite, filtros, revisión completa y mantenimiento preventivo para mantener tu auto en óptimas condiciones.',
  },
  {
    icon: 'lucide:gauge',
    title: 'Diagnóstico Computarizado',
    text: 'Diagnóstico preciso con equipos de última generación para identificar cualquier problema en tu vehículo.',
  },
  {
    icon: 'lucide:zap',
    title: 'Sistema Eléctrico',
    text: 'Reparación y mantenimiento del sistema eléctrico, alternadores, baterías y componentes electrónicos.',
  },
  {
    icon: 'lucide:car',
    title: 'Frenos y Suspensión',
    text: 'Servicio completo de frenos, amortiguadores, suspensión y alineación para tu seguridad en el camino.',
  },
  {
    icon: 'lucide:cog',
    title: 'Motor y Transmisión',
    text: 'Reparación especializada de motores, cajas de cambio y sistemas de transmisión automática y manual.',
  },
  {
    icon: 'lucide:air-vent',
    title: 'Aire Acondicionado',
    text: 'Mantenimiento, reparación y recarga de sistemas de aire acondicionado y climatización vehicular.',
  },
];
---

<Section
  title="Nuestros Servicios"
  subtitle="Ofrecemos una aplia gama de servicios automotrices con la más alta calidad y profesionalismo."
>
  <article class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
    {
      services.map(({ icon, title, text }) => (
        <div class="bg-card text-on-card flex flex-col gap-6 rounded-xl border p-6 shadow-lg">
          <div class="bg-primary/10 mx-auto flex size-[4rem] items-center justify-center rounded-lg text-2xl text-[2rem]">
            <Icon name={icon} class="text-primary" />
          </div>
          <h3 class="text-xl font-semibold">{title}</h3>
          <p class="text-on-muted text-base leading-relaxed">{text}</p>
        </div>
      ))
    }
  </article>
</Section>
