---
const sections = ['inicio', 'servicios', 'nosotros', 'contacto'];
---

<nav class="hidden sm:block">
    <ul class="flex items-center gap-4 font-bebas-neue text-white uppercase">
        {sections.map(section => (
            <li>
                <a class="cursor-pointer relative after:absolute after:left-0 after:bottom-0 after:w-0 after:h-[2px] after:bg-white after:transition-all after:duration-300 hover:after:w-full">{section}</a>
            </li>
        ))}
    </ul>
</nav>