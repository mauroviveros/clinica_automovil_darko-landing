---
import { Icon } from 'astro-icon/components';

const partners = [
  'Toyota',
  'Ford',
  'Chevrolet',
  'Honda',
  'Nissan',
  'Subaru',
  'Mazda',
  'Volkswagen',
  'Hyundai',
];
---

<article
  class="font-bebas-neue flex w-3/4 gap-8 overflow-hidden [mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-200px),transparent_100%)]"
>
  {
    new Array(3).fill(null).map(() => (
      <ul class="animate-infinite-scroll flex gap-8">
        {partners.map((partner) => (
          <li class="flex items-center gap-2">
            <Icon name={`simple-icons:${partner.toLowerCase()}`} size="2.5rem" />
            <span class="select-none text-xl">{partner}</span>
          </li>
        ))}
      </ul>
    ))
  }
</article>
